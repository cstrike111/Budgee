<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout android:id="@+id/leftSpace" android:layout_width="28dp"
        android:layout_height="match_parent" android:orientation="horizontal"></LinearLayout>

    <LinearLayout android:layout_width="240dp" android:layout_height="match_parent"
        android:layout_weight="0.98" android:orientation="vertical" android:weightSum="1">

        <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="200dp"
            android:layout_weight="0.71" android:orientation="vertical">

            <TextView android:id="@+id/usr_text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="User Name:" />

            <EditText android:id="@+id/userName" style="@android:drawable/editbox_background"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:ems="10" android:inputType="text" android:text="Name" />

            <TextView android:id="@+id/pw_text" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp"
                android:text="Enter the Password:" />

            <EditText android:id="@+id/editText3" style="@android:drawable/editbox_background"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:ems="10" android:inputType="textPassword" />

            <TextView android:id="@+id/textView" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Enter the Password Again" />

            <EditText android:id="@+id/editText4" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout android:layout_width="240dp" android:layout_height="54dp"
            android:layout_weight="0.11" android:orientation="horizontal" android:weightSum="1">

            <LinearLayout android:layout_width="80dp" android:layout_height="match_parent"
                android:layout_weight="0.23" android:orientation="horizontal"></LinearLayout>

            <Button android:id="@+id/button3" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="0.24"
                android:text="Done" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="28dp" android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>