<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer" android:layout_width="match_parent"
    android:layout_height="match_parent" android:baselineAligned="false"
    android:orientation="horizontal" android:weightSum="1">

    <LinearLayout android:id="@+id/leftSpace" android:layout_width="29dp"
        android:layout_height="match_parent" android:orientation="horizontal" />

    <LinearLayout android:id="@+id/midContainer" android:layout_width="wrap_content"
        android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1">

        <LinearLayout android:id="@+id/item_food" android:layout_width="match_parent"
            android:layout_height="90dp" android:orientation="vertical">

            <TextView android:id="@+id/food" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:text="Food" android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout android:id="@+id/item_social" android:layout_width="match_parent"
            android:layout_height="90dp" android:orientation="vertical">

            <TextView android:id="@+id/social" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:text="Social" android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout android:id="@+id/item_other" android:layout_width="match_parent"
            android:layout_height="90dp" android:orientation="vertical">

            <TextView android:id="@+id/other" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:text="Other" android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout android:id="@+id/space" android:layout_width="match_parent"
            android:layout_height="90dp" android:orientation="vertical" />

        <LinearLayout android:id="@+id/buttons" android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="horizontal">

            <Button android:id="@+id/weekly" android:layout_width="85dp"
                android:layout_height="wrap_content" android:text="weekly"
                android:textSize="12sp" />

            <Button android:id="@+id/monthly" android:layout_width="85dp"
                android:layout_height="wrap_content" android:text="monthly"
                android:textSize="12sp" />

            <Button android:id="@+id/semester" android:layout_width="85dp"
                android:layout_height="wrap_content" android:text="semester"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/rightSpace" android:layout_width="37dp"
        android:layout_height="match_parent" android:orientation="horizontal" />
</LinearLayout>