<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal" android:weightSum="1">

        <LinearLayout android:id="@+id/leftSpace" android:layout_width="22dp"
            android:layout_height="match_parent" android:orientation="horizontal"></LinearLayout>

        <LinearLayout android:id="@+id/listContainer" android:layout_width="189dp"
            android:layout_height="match_parent" android:layout_weight="1.04"
            android:orientation="vertical" android:weightSum="1">

            <TextView android:id="@+id/expenditure" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:text="Expenditure" android:textAlignment="center"
                android:textColor="#000000" />

            <LinearLayout android:id="@+id/itemRent" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/rentSpace" android:layout_width="140dp"
                    android:layout_height="match_parent" android:layout_weight="0.99"
                    android:orientation="vertical">

                    <TextView android:id="@+id/rent" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Rent"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/rentInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/rentDay" android:layout_width="100dp"
                    android:layout_height="51dp" android:orientation="vertical"
                    android:weightSum="1">

                    <TextView android:id="@+id/dd" android:layout_width="100dp"
                        android:layout_height="wrap_content" android:layout_marginBottom="3dp"
                        android:layout_marginTop="2dp" android:text="Day to be paid on (DD)"
                        android:textColor="#000000" android:textSize="10sp" />

                    <EditText android:id="@+id/inputRentDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/itemFood" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/spaceFood" android:layout_width="140dp"
                    android:layout_height="match_parent" android:layout_weight="0.93"
                    android:orientation="vertical">

                    <TextView android:id="@+id/food" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Food"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/foodInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/foodDay" android:layout_width="wrap_content"
                    android:layout_height="51dp" android:layout_weight="0.08"
                    android:orientation="vertical" android:weightSum="1">

                    <LinearLayout android:id="@+id/foodTopSpace" android:layout_width="match_parent"
                        android:layout_height="16dp" android:orientation="vertical"></LinearLayout>

                    <EditText android:id="@+id/inputFoodDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/itemSocial" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/spaceSocial" android:layout_width="136dp"
                    android:layout_height="match_parent" android:layout_weight="0.93"
                    android:orientation="vertical">

                    <TextView android:id="@+id/social" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Social"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/socialInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/socialDay" android:layout_width="wrap_content"
                    android:layout_height="51dp" android:layout_weight="0.08"
                    android:orientation="vertical" android:weightSum="1">

                    <LinearLayout android:id="@+id/socialTopSpace"
                        android:layout_width="match_parent" android:layout_height="17dp"
                        android:orientation="vertical"></LinearLayout>

                    <EditText android:id="@+id/inputSocialDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/itemLoan" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/spaceLoan" android:layout_width="136dp"
                    android:layout_height="match_parent" android:layout_weight="0.93"
                    android:orientation="vertical">

                    <TextView android:id="@+id/loan" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Small Loan Re-payment"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/loanInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/loanDay" android:layout_width="wrap_content"
                    android:layout_height="51dp" android:layout_weight="0.08"
                    android:orientation="vertical" android:weightSum="1">

                    <LinearLayout android:id="@+id/loanTopSpace" android:layout_width="match_parent"
                        android:layout_height="16dp" android:layout_weight="0.07"
                        android:orientation="vertical"></LinearLayout>

                    <EditText android:id="@+id/inputLoanDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/itemSamll" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/spaceSamll" android:layout_width="136dp"
                    android:layout_height="match_parent" android:layout_weight="0.93"
                    android:orientation="vertical">

                    <TextView android:id="@+id/samll" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Small Purchases"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/samllInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/samllDay" android:layout_width="wrap_content"
                    android:layout_height="51dp" android:layout_weight="0.08"
                    android:orientation="vertical" android:weightSum="1">

                    <LinearLayout android:id="@+id/samllTopSpace"
                        android:layout_width="match_parent" android:layout_height="17dp"
                        android:orientation="vertical"></LinearLayout>

                    <EditText android:id="@+id/inputsamllDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/itemOther" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout android:id="@+id/spaceOther" android:layout_width="136dp"
                    android:layout_height="match_parent" android:layout_weight="0.93"
                    android:orientation="vertical">

                    <TextView android:id="@+id/other" android:layout_width="158dp"
                        android:layout_height="wrap_content" android:text="Other"
                        android:textColor="#000000" />

                    <EditText android:id="@+id/otherInput" android:layout_width="157dp"
                        android:layout_height="wrap_content" android:background="@drawable/border"
                        android:ems="10" android:hint="￡" android:inputType="number"
                        android:text="￡" android:textColor="?attr/colorBackgroundFloating" />
                </LinearLayout>

                <LinearLayout android:id="@+id/otherDay" android:layout_width="wrap_content"
                    android:layout_height="51dp" android:layout_weight="0.08"
                    android:orientation="vertical" android:weightSum="1">

                    <LinearLayout android:id="@+id/otherTopSpace"
                        android:layout_width="match_parent" android:layout_height="16dp"
                        android:layout_weight="0.04" android:orientation="vertical"></LinearLayout>

                    <EditText android:id="@+id/inputotherDay" android:layout_width="46dp"
                        android:layout_height="wrap_content" android:layout_marginLeft="50dp"
                        android:background="@drawable/border" android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/colorBackgroundFloating" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/buttonContainer" android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout android:id="@+id/firstRow" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:weightSum="1">

                    <Button android:id="@+id/addRow" android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:layout_weight="0.87"
                        android:text="Add Row" />

                    <LinearLayout android:id="@+id/buttonSpace1" android:layout_width="128dp"
                        android:layout_height="match_parent" android:layout_weight="0.11"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

                <LinearLayout android:id="@+id/secondRow" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">

                    <LinearLayout android:id="@+id/buttonSpace2" android:layout_width="132dp"
                        android:layout_height="match_parent" android:layout_weight="0.09"
                        android:orientation="horizontal"></LinearLayout>

                    <Button android:id="@+id/continueButton" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="Continue" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:id="@+id/rightSpace" android:layout_width="22dp"
            android:layout_height="match_parent" android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>